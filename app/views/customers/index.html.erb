<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Long</th>
      <th>Lat</th>
      <th>Zone name</th>
      <th>Salesman name</th>
      <th>Status</th>
      <th>Last visited at</th>
      <th>Last invoice at</th>
      <th>Last trx amount</th>
      <th>Extra1</th>
      <th>Extra2</th>
      <th>Extra3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= customer.name %></td>
        <td><%= customer.long %></td>
        <td><%= customer.lat %></td>
        <td><%= customer.zone_name %></td>
        <td><%= customer.salesman_name %></td>
        <td><%= customer.status %></td>
        <td><%= customer.last_visited_at %></td>
        <td><%= customer.last_invoice_at %></td>
        <td><%= customer.last_trx_amount %></td>
        <td><%= customer.extra1 %></td>
        <td><%= customer.extra2 %></td>
        <td><%= customer.extra3 %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

